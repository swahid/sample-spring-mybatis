<mapper namespace="org.javabase.apps.mapper.UserMapper">
	<cache />
    <resultMap id="userList" type="User">
        <result property="userid"     column="userid" />
        <result property="roleid"     column="roleid" />
        <result property="rolename"    column="rolename" />
        <result property="username"    column="username" />
        <result property="password"    column="password" />
        <result property="email"    column="email" />
        <result property="firstName"    column="firstname" />
        <result property="lastName"    column="lastname" />
        <result property="phone"    column="phone" />
        <result property="isactive"    column="isactive" />
        <result property="regdate"    column="regdate" />
        <result property="isnonexpired"    column="isnonexpired" />
        <result property="isnonlocked"    column="isnonlocked" />
        <result property="expDate"    column="expdate" />
    </resultMap>
    
    <select id="getAllUsers" resultMap="userList">
        select * from user
    </select>
    
    <insert id="addUser" parameterType="User">
    INSERT INTO User(
        userid,
        roleid,
        username,
        password,
        email,
        firstname,
        lastname,
        isactive,
        isnonexpired,
        isnonlocked,
        regdate
    )
    values(
        #{userid},
        #{roleid},
        #{username},
        #{password},
        #{email},
        #{firstName},
        #{lastName},
        #{isactive},
        #{isnonexpired},
        #{isnonlocked},
        #{regdate}
    )
    </insert>
    <select id="getUserByUsername" resultType="User" parameterType="String">
    	select u.*, r.rolename as rolename from user u
    	join role r on r.roleid = u.roleid
    	where u.username =#{username}
    </select>
    
</mapper>